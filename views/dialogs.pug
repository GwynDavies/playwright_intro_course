doctype
html
  include includes/header.pug

  body.d-flex.flex-column.h-100
    div.container
      include includes/navbar.pug
      
      div(id="watermark")
        p Test Automation Practice App
        
      main
        br
        h3 Dialogs
        br
        br

        section
          p Page for scripts to trigger various dialogs  

          p
          button(id="alert_button" type="button").btn.btn-outline-dark Alert dialog
          p
          button(id="confirm_button" type="button").btn.btn-outline-dark Confirm dialog
          p  
          button(id="prompt_button" type="button").btn.btn-outline-dark Prompt dialog
          p
          p
          p
          div.container
            div.row
              div.col-lg-2
                label Dialog Response:
              div.col-lg-10
                div(id="dialogResponse") WAITING

      include includes/fixed-footer.pug

    include includes/scripts.pug

    script(type="text/javascript").
      let alertButton = document.getElementById("alert_button")
      alertButton.addEventListener("click", function (event) {
        alert("Triggered Alert Dialog")
      })
      let confirmButton = document.getElementById("confirm_button")
      confirmButton.addEventListener("click", function (event) {
        let result = confirm("Triggered Confirm Dialog")
        console.log("CONFIRM ->", result)
        let status = document.getElementById("dialogResponse")
        status.innerHTML = result
      })
      let promptButton = document.getElementById("prompt_button")
      promptButton.addEventListener("click", function (event) {
        let result = prompt("Triggered Prompt Dialog")
        console.log("PROMPT ->", result)
         let status = document.getElementById("dialogResponse")
        status.innerHTML = result
      })
