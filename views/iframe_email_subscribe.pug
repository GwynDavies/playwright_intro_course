doctype
html
  include includes/header.pug

  body.d-flex.flex-column.h-100
    div.container
      div.row
        div.col-lg-4

          p   
          p
          h6(id="prompt_mesg" stle="display:block") Send updates to my inbox ...
          label(id="subscribed_mesg"  style="display:none") You are now subscribed!
          p 
          p
          input(id="email" type="email" name="email" placeholder="Your email address"  stle="display:block").form-control   
          p
          p
          button(id="subscribeBtn" onclick="hasBeenClicked()").btn.btn-outline-dark Subscribe
          p 
          p 
    include includes/scripts.pug
    script(type="text/javascript").
      function hasBeenClicked(){
        document.getElementById('subscribed_mesg').style.display = "block";
        document.getElementById('prompt_mesg').style.display = "none";
        document.getElementById('email').style.display = "none";
        document.getElementById('subscribeBtn').style.display = "none";
      }