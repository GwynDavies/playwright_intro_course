doctype 5  
html
  include includes/header.pug

  body.d-flex.flex-column.h-100
    div.container
      include includes/navbar.pug
      
      div(id="watermark")
        p Test Automation Practice App

      br
      h3 Web form - GET
      br
      br
      
      form(action="/echo-webform-get" method="GET" enctype="multipart/form-data")
        p Text:
        input(type="text" id="text" name="text" placeholder="").form-control.w-25
        p
        p Email:
        input(type="email" id="email" name="email" placeholder="").form-control.w-25
        p
        p Password:
        input(type="password" id="password" name="password" placeholder="").form-control.w-25
        p
        p Search:
        input(type="search" id="search" name="search" placeholder="Search for items here").form-control.w-25
        p
        p Number:
        input(type="number" id="number" name="number" required min="20" max="100" step="5" placeholder="").form-control.w-25
        p
        p Phone:
        input(type="tel" id="phone" name="phone" placeholder="(1)").form-control.w-25
        p
        p Date:
        input(type="date" id="date" name="date" required min="1970-01-01" placeholder="").form-control.w-25
        p
        p Time:
        input(type="time"  id="time" name="time").form-control.w-25
        p
        p Checkboxes:
        div.container
          div.row
            div.col-md-12.col-md-offset-1.coll
              p Checkbox 1
              input(type='checkbox' id="checkbox1" name="checkbox1" checked=false).form-check-input
              p 
              p Checkbox 2
              input(type='checkbox' id="checkbox2" name="checkbox2" checked=false).form-check-input
        p 
        p Radio buttons:
          div.container
            div.row
              div.col-md-12.col-md-offset-1.col1
                p Radio button 1:
                input(type="radio" id="radiobutton1" name="radiobuttons" value="radiobutton1" checked=false).form-check-input
                p 
                p Radio button 2 :
                input(type="radio" id="radiobutton2" name="radiobuttons" value="radiobutton2" checked=false).form-check-input
        p 
        p Select:
        select(id="select" name="select" multiple).form-control.w-25
          option(value='option1') Option 1
          option(value='option2') Option 2
          option(value='option3') Option 3
          option(value='option4') Option 4
        p 
        p Textarea:
        textarea(id="textarea" name="textarea").form-control.w-25
        p
        input(type="hidden" name="hidden" value="i_am_hidden").form-control.w-25
        p
        p URL:
        input(type="url" id="url" name="url").form-control.w-25
        p 
        label.form-label Color:
        input(type="color" id="color" name="color" style=" height: 40px").form-control.form-control-color
        p
        p Range:
        input(type="range" id="range" name="range").form-control-range
        p
        button(type="submit").btn.btn-outline-dark Submit
      
      include includes/sticky-footer.pug

    include includes/scripts.pug
